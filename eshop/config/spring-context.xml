<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd 
		http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<bean class="java.util.ArrayList" id="modelYearsReferenceList">
		<constructor-arg>
			<list value-type="java.lang.Integer">
				<value>2013</value>
				<value>2012</value>
				<value>2011</value>
				<value>2010</value>
				<value>2009</value>
			</list>
		</constructor-arg>
	</bean>

	<context:component-scan base-package="com.eshop"/>

	<context:property-placeholder location="classpath:database.properties,classpath:c3p0.properties" />

 	<import resource="classpath:spring-jpa.xml" />
	<import resource="classpath:spring-aop.xml" />


 </beans>
